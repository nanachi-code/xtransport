.kopa__commentForm
    h3.form-title Leave a Reply
    p Your email address will not be published. Required fields are marked *
    .widget-content
        #respond.contact-respond
            form(action="/", method="post", novalidate="novalidate").contact-form
                .col-xs-12.col-sm-4
                    input(type="text", placeholder="Name", name="name")
                // col

                .col-xs-12.col-sm-4
                    input(type="text", placeholder="Email", name="email")
                // col

                .col-xs-12.col-sm-4
                    input(type="text", placeholder="Website", name="web")
                // col

                .col-xs-12
                    textarea(name="message", cols="30", rows="5", placeholder="Add your comment here...")
                // col

                .col-xs-12
                    button(type="submit")#submit-contact.btn.btn--md.btn--curve.btn__color--primary Subscribe
                // col
            // contact form
        // contact
    // widget content
