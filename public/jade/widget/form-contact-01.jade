.kopa_formContact.style--01
	.wpcf7
		.screen-reader-response
		form(action="/", method="post", novalidate="novalidate").wpcf7-form
			p: span.wpcf7-form-control-wrap.your-name: input(type="text", placeholder="Name *").wpcf7-form-control.wpcf7-text.wpcf7-validates-as-required

			p: span.wpcf7-form-control-wrap.your-email: input(type="email", placeholder="Email *").wpcf7-form-control.wpcf7-text.wpcf7-email.wpcf7-validates-as-required.wpcf7-validates-as-email

			p: span.wpcf7-form-control-wrap.your-subject: input(type="text", placeholder="Website url").wpcf7-form-control.wpcf7-text

			p: span.wpcf7-form-control-wrap.your-message: textarea(placeholder="Comment").wpcf7-form-control.wpcf7-textarea

			p: input(type="submit", value="post comment").wpcf7-form-control.wpcf7-submit.btn.btn--md.btn--curve.btn__color--primary
