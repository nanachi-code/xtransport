	// slider quote

mixin breadcrumb01(text1, text2)
	.kopa__breadcrumb.style--01
		span You are here:
		i.fa.fa-angle-double-right
		a(href='#') #{text1}
		i.fa.fa-angle-double-right
		span #{text2}
	// breadcrumb