		- var text_item = list_item.text_item
		li: a(href='#')
			i()&attributes(list_icon)
			| #{text_item}

mixin slider-quote-01(controls, pager)
	.widget.slider__quote.style--01.kopa__reveal.bottom
		ul.bxslider(data-controls=controls, data-pager=pager)
			block
	// slider quote

